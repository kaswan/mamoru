<!DOCTYPE html>
<html>
<head>
  <title>Memamoru</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'specialists/application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>


<body>

<nav class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <%= link_to 'Me-Mamoru', specialists_root_path, class: 'navbar-brand' %>
    </div>
    <div id="navbar">
      <% if specialist_signed_in? %>
        <ul class="nav navbar-nav pull-right">
          <li><%= image_tag current_specialist.try(:image_url), alt: current_specialist.try(:name) %></li>
          <li><%= link_to 'Profile', specialists_profiles_path %></li>
          <li><%= link_to "Logout", destroy_specialist_session_path, method: :delete %></li>
        </ul>
      <% else %>
        <ul class="nav navbar-nav">
          <li><%= link_to "SignUp", new_specialist_registration_path %></li>
      		<li><%= link_to "LogIn", new_specialist_session_path %></li>          
        </ul>
      <% end %>
      
    </div>
  </div>
</nav>

<div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
  <% end %>

  <%= yield %>
</div>

</body>


</html>
