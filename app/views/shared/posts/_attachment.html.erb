
<% @post.attachments.each do |image| %>
  <div class="img-thumbnail image-<%=image.id%>">
    <%= image_tag image.image.url(:square), alt: image.image.url(:square) %><br>
    <%= link_to _('Delete'), image, class: 'btn dz-remove', id: image.id, alert: 'Are you sure?' %>
  </div>
<% end %>

<script>
$('.dz-remove').on('click', function(e){
     e.preventDefault();
     var id = $(this).attr('id');
			// make a DELETE ajax request to delete the file
			$.ajax({
				type: 'DELETE',
				url: $(this).attr('href'),
				success: function(data){
				
				  $(".image-" + id).remove();
					console.log(data.message);
				}
			});
			})
</script>