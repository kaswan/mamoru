
// Append new data
$("<%=j render(:partial => 'specialists', :object => @specialists) %>")
  .appendTo($(".infinite-table table"));

// Update pagination link
<% if @specialists.last_page? %>
  $('.pagination').html("");
<% else %>
  $('.pagination')
    .html("<%=j link_to_next_page(@specialists, 'Next Page', params: params, remote: true) %>");
<% end %>