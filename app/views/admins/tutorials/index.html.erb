<p id="notice"><%= notice %></p>

<h1>Listing Tutorials</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Summary</th>
      <th>Is free</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tutorials.each do |tutorial| %>
      <tr>
        <td><%= tutorial.title %></td>
        <td><%= tutorial.summary %></td>
        <td><%= tutorial.is_free %></td>
        <td><%= link_to 'Show', [:admins, tutorial] %></td>
        <td><%= link_to 'Edit', edit_admins_tutorial_path(tutorial) %></td>
        <td><%= link_to 'Destroy', [:admins, tutorial], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

