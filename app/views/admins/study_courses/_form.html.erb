<%= simple_nested_form_for([:admins, @study_course]) do |f| %>
  <%= f.error_notification %>
  <%= f.simple_fields_for :attachment do |a| %>
    <%= f.label :image %>
    <%= image_tag((a.object.image.exists? ? a.object.image.url(:icon) : ''))%>
    <%= a.file_field :image %>
  <% end %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :summary %>
    <%= f.input :recommend_for, placeholder: 'こんな方におすすめ！！
・認知症が不安な方
・親の介護に不安を感じている方' %>
    <%= f.input :is_free %>
    <%= f.input :price %>
  </div>
  <%= f.label :parent %>
  <%= f.select :parent_id, Specialist.all.collect {|c| [ c.name, c.id ] } %>
  <%= f.hidden_field :parent_type, value: 'Specialist'%>
  
  <%= f.association :specialized_field %>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
  
  
<% end %>
