<%= simple_nested_form_for([:admins, @study_course]) do |f| %>
  <%= f.error_notification %>
  <%= f.simple_fields_for :attachment do |a| %>
    <%= f.label :image %>
    <%= image_tag((a.object.upload.exists? ? a.object.upload.url(:icon) : ''))%>
    <%= a.file_field :upload %>
  <% end %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :summary %>
    <%= f.input :is_free %>
    <%= f.input :price %>
  </div>
  <%= f.label :parent, 'Specialist' %>
  <%= f.select :parent_id, Specialist.all.collect {|c| [ c.name, c.id ] } %>
  <%= f.hidden_field :parent_type, value: 'Specialist'%>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
  
  
<% end %>
