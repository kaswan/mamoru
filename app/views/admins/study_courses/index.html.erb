<div class="main_box2">
  <div class="main_box_in">
    <h1><%= _('Listing Study Courses')%></h1>
    <h2><%= link_to _('New Study Course'), new_admins_study_course_path %></h2>
    <table class="history">      
      <thead>
        <tr>
          <th><%= _('Name') %></th>
          <th><%= _('Summary') %></th>
          <th><%= _('Is free') %></th>
          <th><%= _('Price') %></th>
          <th><%= _('Teacher') %></th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @study_courses.each do |study_course| %>
          <tr>
            <td><%= study_course.name %></td>
            <td><%= study_course.summary.slice(0..29) + "..." %></td>
            <td><%= study_course.is_free ? "○" : "×" %></td>
            <td><%= study_course.price %></td>
            <td><%= study_course.parent.name %></td>
            <td><%= link_to _('Show'), [:admins, study_course] %></td>
            <td><%= link_to _('Edit'), edit_admins_study_course_path(study_course) %></td>
            <td><%= link_to _('Destroy'), [:admins, study_course], method: :delete, data: { confirm: _('Are you sure?') } %></td>
          </tr>
        <% end %>
      </tbody>
      <thead>
        <tr>
          <th><%= _('Name') %></th>
          <th><%= _('Summary') %></th>
          <th><%= _('Is free') %></th>
          <th><%= _('Price') %></th>
          <th><%= _('Teacher') %></th>
          <th colspan="3"></th>
        </tr>
      </thead>
    </table>
  </div> 
</div>


